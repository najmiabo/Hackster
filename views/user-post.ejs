<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Post</title>
    <style>
        body {
            background-color: #343a40; 
            color: #ffffff; 
        }
        .container {
            background-color: #454d55; 
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
            margin-top: 50px;
        }
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }
        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
    </style>
</head>
<body class="mx-4 my-5">
    <div class="container">
        <h1 class="mb-4">Post sesuka hati kalian!</h1>
        <form action="" method="post">
            <div class="form-group mb-3">
                <label for="comment">Post:</label>
                <textarea class="form-control" rows="5" id="comment" name="content"></textarea>
            </div>
            <div class="mb-3">
                <% tags.forEach((el) => { %>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="TagId" value="<%= el.id %>" id="<%= el.name %>">
                        <label class="form-check-label" for="<%= el.name %>"><%= el.name %></label>
                    </div>
                <% }) %>
            </div>
            <button type="submit" class="btn btn-primary">Upload</button>
        </form>

        <% if (errors) { %>
            <p class="mt-3 text-danger"><%= errors %></p>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</body>
</html>
