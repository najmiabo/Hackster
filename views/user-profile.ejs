<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <style>
      
        body {
            background-color: #34495e; 
            color: #ffffff; 
        }
        .container {
            background-color: rgba(0, 0, 0, 0.6); 
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.4);
            margin-top: 50px;
        }
        .btn-primary {
            background-color: #2980b9;
            border-color: #2980b9;
        }
        .btn-primary:hover {
            background-color: #1a5276; 
            border-color: #1a5276;
        }
        .btn-secondary {
            background-color: #2c3e50; 
            border-color: #2c3e50;
        }
        .btn-secondary:hover {
            background-color: #263747;
            border-color: #263747;
        }
        h2, h3 {
            color: #ffffff; 
        }
    </style>
</head>
<body>
  <%- include('./partials/_header') %>
  <br><br><br>
    <% const arr = [] %>

    <% if (!user.Profile) { %>
        <h2 class="mb-4">Upload Your Profile First.</h2>
        <form action="" method="post" class="container">
          <div class="mb-3">
            <label for="" class="form-label">Full Name</label>
            <input type="text" class="form-control" name="fullName">
          </div>
          <div class="mb-3">
            <label for="" class="form-label">Gender</label>
            <select class="form-select" aria-label="Default select example" name="gender">
                <option selected>--Select Gender--</option>
                <option value="M">Male</option>
                <option value="F">Female</option>
            </select>
          </div>
          <div class="mb-3">
            <label for="" class="form-label">Birth Date</label>
            <input type="date" class="form-control" name="dateOfBirth">
          </div>
          <div class="mb-3">
            <label for="" class="form-label">Phone Number</label>
            <input type="text" class="form-control" name="phone">
          </div>
          <button type="submit" class="btn btn-primary">Save</button>
        </form>
      <% } else { %>
        <a href="/profile/update"><button type="button" class="btn btn-primary btn-lg mb-4">Update Profile</button></a>
      <% } %>
        <h3 class="mb-4">Your Post</h3>
    <table class="table table-dark table-striped">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Your Post</th>
            <th scope="col">TagList</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
        <% user.Posts.forEach((el, index) => { %>
          <% if (el.Tags.length) { %>
            <% el.Tags.forEach((el) => { %>
              <% arr.push(el.name) %>
            <% }) %>
            <tr>
              <th scope="row"><%= index + 1 %></th>
              <td><%= el.content %></td>
                <td><%= arr.join(", ") %></td>
              <td>
                <a href="/addtag/<%= el.id %>"><button type="button" class="btn btn-secondary">Add Tag</button></a>
              </td>
            </tr>
          <% } %>
        <% }) %>
        </tbody>
      </table>
</body>
</html>
